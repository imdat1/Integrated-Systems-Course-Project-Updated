@{
    var userId = ViewBag.userId;
}

<form asp-controller="Database" asp-action="ImportDatabases" method="post" enctype="multipart/form-data">
    <input type="hidden" name="userId" value="@userId" />
    <div class="form-group">
        <input type="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Import Databases for user with id: @userId</button>
</form>

