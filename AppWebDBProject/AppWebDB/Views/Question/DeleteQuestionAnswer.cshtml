@model Domain.Domain.Question

<h1>Delete Question-Answer Pair</h1>

<form asp-action="DeleteQuestionAnswerConfirmed" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" name="databaseId" value="@ViewBag.DatabaseId" />
    <p>Are you sure you want to delete this question-answer pair?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-id="@ViewBag.DatabaseId" class="btn btn-secondary">Cancel</a>
</form>
