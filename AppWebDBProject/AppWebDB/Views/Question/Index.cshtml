@{
}
@{
    var databaseId = ViewBag.DatabaseId;
}
@model List<Domain.Domain.Question>
<h1>All questions and answers</h1>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
<a asp-action="AskQuestion" asp-controller="Question" asp-route-id="@databaseId">Ask a new Question</a>
<table class="table">
    <thead>
        <th>Question Text</th>
        <th>Question Answer</th>
        <th></th>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count(); i++)
    {
            var q = Model[i];
            <tr>
            <td>@q.QuestionText</td>
            <td>@q.QuestionAnswer</td>
            <td>
                <a asp-action="DeleteQuestionAnswer" asp-controller="Question" asp-route-questionId="@q.Id" asp-route-databaseId="@databaseId">Delete Question-Answer Pair</a>
            </td>
        </tr>
    }
    </tbody>
</table>